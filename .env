# .env
# Database Credentials for PostgreSQL
POSTGRES_DB=postgres
POSTGRES_USER=odoo
POSTGRES_PASSWORD=odoo_password

# Odoo Admin User Credentials (for initial database creation via web UI)
# This variable is NOT used by Docker or Odoo directly for setting the password.
# It's here for your reference to remember the password you WILL set in the Odoo WEB UI.
ODOO_ADMIN_PASSWORD=your_chosen_admin_password_in_ui # <-- REMEMBER THIS PASSWORD!

# Odoo Configuration Paths
ODOO_ADDONS_PATH=/usr/lib/python3/dist-packages/odoo/addons,/mnt/extra-addons
ODOO_DATA_DIR=/var/lib/odoo